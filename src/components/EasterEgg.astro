<style>
  .hidden-heart {
    position: fixed;
    bottom: 10px;
    left: 10px;
    font-size: 1rem;
    opacity: 0.05;
    cursor: pointer;
    z-index: 9999;
    transition: opacity 0.3s;
  }

  .hidden-heart:hover {
    opacity: 1;
    transform: scale(1.2);
  }

  /* Surprise Overlay */
  .surprise-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.85);
    z-index: 10000;
    display: flex;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(5px);
  }

  .hidden { display: none; }

  .message-box {
    background: #fff;
    color: #333;
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    max-width: 80%;
    box-shadow: 0 0 50px var(--fire-red);
    animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid var(--gold);
  }
  
  h2 {
    color: var(--fire-red);
    margin-bottom: 1rem;
  }
  
  p {
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  button {
    background: var(--fire-orange);
    color: white;
    border: none;
    padding: 0.5rem 1.5rem;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
  }

  @keyframes popIn {
    from { transform: scale(0.5); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
</style>

<script>
  const heart = document.getElementById('easter-egg');
  const overlay = document.getElementById('surprise-message');
  const closeBtn = document.getElementById('close-surprise');

  function explodeConfetti(x, y) {
    const colors = ['#ff3c3c', '#ff4757', '#ffd700', '#ffffff'];
    const particleCount = 100;
    
    for (let i = 0; i < particleCount; i++) {
        const el = document.createElement('div');
        el.style.position = 'fixed';
        el.style.left = x + 'px';
        el.style.top = y + 'px';
        el.style.width = '8px';
        el.style.height = '8px';
        el.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        el.style.borderRadius = '50%';
        el.style.pointerEvents = 'none';
        el.style.zIndex = '10001';
        
        // Random velocity
        const angle = Math.random() * Math.PI * 2;
        const velocity = Math.random() * 10 + 2;
        const vx = Math.cos(angle) * velocity;
        const vy = Math.sin(angle) * velocity;
        
        document.body.appendChild(el);

        let opacity = 1;
        let pX = x;
        let pY = y;
        let pVy = vy;

        const animate = () => {
            pX += vx;
            pY += pVy;
            pVy += 0.2; // Gravity
            opacity -= 0.02;
            
            el.style.left = pX + 'px';
            el.style.top = pY + 'px';
            el.style.opacity = opacity.toString();
            
            if (opacity > 0) {
                requestAnimationFrame(animate);
            } else {
                el.remove();
            }
        };
        requestAnimationFrame(animate);
    }
  }

  if (heart && overlay && closeBtn) {
    heart.addEventListener('click', (e) => {
        explodeConfetti(e.clientX, e.clientY);
        setTimeout(() => {
            overlay.classList.remove('hidden');
        }, 500);
    });
    
    closeBtn.addEventListener('click', () => {
        overlay.classList.add('hidden');
    });
  }
</script>
