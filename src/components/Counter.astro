<div class="love-navbar">
  <span class="nav-label">Mi amor por vos empezó hace:</span>
  <div id="nav-timer" class="nav-timer">
    <div class="time-unit"><span id="years">0</span><span class="label">Años</span></div>
    <span class="separator">·</span>
    <div class="time-unit"><span id="months">0</span><span class="label">Meses</span></div>
    <span class="separator">·</span>
    <div class="time-unit"><span id="days">0</span><span class="label">Días</span></div>
    <span class="separator">|</span>
    <div class="time-unit"><span id="hours">00</span><span class="label">Hs</span></div>
    <span class="separator">:</span>
    <div class="time-unit"><span id="minutes">00</span><span class="label">Min</span></div>
    <span class="separator">:</span>
    <div class="time-unit"><span id="seconds">00</span><span class="label">Seg</span></div>
  </div>
</div>

<style>
  .love-navbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(10, 5, 5, 0.95);
    backdrop-filter: blur(10px);
    border-top: 1px solid var(--fire-red);
    padding: 0.8rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    z-index: 999;
    box-shadow: 0 -5px 20px rgba(255, 60, 60, 0.2);
    font-family: 'Inter', sans-serif;
  }

  .nav-label {
    color: var(--gold);
    font-family: 'Playfair Display', serif;
    font-size: 1.1rem;
    letter-spacing: 1px;
    white-space: nowrap;
    text-shadow: 0 0 5px rgba(212, 175, 55, 0.5);
  }

  .nav-timer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
  }

  .time-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 1;
  }

  .time-unit span:first-child {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--fire-orange);
    text-shadow: 0 0 5px rgba(255, 60, 60, 0.5);
    min-width: 20px;
    text-align: center;
  }

  .label {
    font-size: 0.6rem;
    color: #888;
    text-transform: uppercase;
    margin-top: 2px;
  }

  .separator {
    color: #555;
    font-size: 1rem;
    margin-top: -8px;
  }

  @media (max-width: 768px) {
    .love-navbar {
      flex-direction: column;
      gap: 0.4rem;
      padding: 0.6rem;
    }
    
    .nav-label {
      font-size: 0.9rem;
    }

    .time-unit span:first-child {
      font-size: 1rem;
    }
    
    .label {
      font-size: 0.5rem;
    }
    
    .separator { font-size: 0.8rem; }
    
    /* Ocultar etiquetas largas en movil si molesta */
    .label { display: none; }
    
    /* Make simpler for mobile */
    .nav-timer { gap: 0.3rem; }
    .time-unit { flex-direction: row; align-items: baseline; gap: 2px; }
    .time-unit::after {
        content: attr(data-short);
        font-size: 0.7rem;
        color: #888;
    }
  }
</style>

<script>
  function updateCounter() {
    const startDate = new Date('2024-08-11T00:00:00'); 
    const now = new Date();
    
    let years = now.getFullYear() - startDate.getFullYear();
    let months = now.getMonth() - startDate.getMonth();
    let days = now.getDate() - startDate.getDate();
    let hours = now.getHours() - startDate.getHours();
    let minutes = now.getMinutes() - startDate.getMinutes();
    let seconds = now.getSeconds() - startDate.getSeconds();

    // Adjust for negative values logic (calendar accurate)
    if (seconds < 0) {
      seconds += 60;
      minutes--;
    }
    if (minutes < 0) {
      minutes += 60;
      hours--;
    }
    if (hours < 0) {
      hours += 24;
      days--;
    }
    if (days < 0) {
      const prevMonth = new Date(now.getFullYear(), now.getMonth(), 0);
      days += prevMonth.getDate();
      months--;
    }
    if (months < 0) {
      months += 12;
      years--;
    }

    const els = {
      years: document.getElementById('years'),
      months: document.getElementById('months'),
      days: document.getElementById('days'),
      hours: document.getElementById('hours'),
      minutes: document.getElementById('minutes'),
      seconds: document.getElementById('seconds')
    };

    if (els.years) els.years.textContent = years.toString();
    if (els.months) els.months.textContent = months.toString();
    if (els.days) els.days.textContent = days.toString();
    
    if (els.hours) els.hours.textContent = hours.toString().padStart(2, '0');
    if (els.minutes) els.minutes.textContent = minutes.toString().padStart(2, '0');
    if (els.seconds) els.seconds.textContent = seconds.toString().padStart(2, '0');
  }

  setInterval(updateCounter, 1000);
  updateCounter();
</script>
